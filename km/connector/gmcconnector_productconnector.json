{
  "$id": "gmcconnector_productconnector",
  "$schema": "https://schema.yext.com/config/km/connector/v2",
  "displayName": "Google Merchant Center Product Connector",
  "entityType": "product",
  "source": {
    "sourceConfig": {
      "apiPushConfig": {
        "app": "57720",
        "dataFormat": "JSON",
        "enabled": true
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "products"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "title"
      },
      {
        "type": "JSON",
        "header": "Description",
        "path": "description"
      },
      {
        "type": "JSON",
        "header": "Availability",
        "path": "availability"
      },
      {
        "type": "JSON",
        "header": "Price (Value)",
        "path": "price.value"
      },
      {
        "type": "JSON",
        "header": "Price (Currency)",
        "path": "price.currency"
      },
      {
        "type": "JSON",
        "header": "Offer ID",
        "path": "offerId"
      },
      {
        "type": "JSON",
        "header": "Color ",
        "path": "color"
      },
      {
        "type": "JSON",
        "header": "GTIN",
        "path": "gtin"
      }
    ]
  },
  "transforms": [
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Availability"
          ]
        },
        "plugin": "gmc_convertStockStatus",
        "function": "convertStockStatus"
      }
    },
    {
      "formatDates": {
        "inputHeaders": {
          "headers": [
            "Availability Date",
            "Expiration Date"
          ]
        },
        "inputFormat": "yyyy-MM-dd\u0027T\u0027kk:mm:ssX"
      }
    }
  ],
  "mappings": [
    {
      "field": "stockStatus",
      "header": "Availability",
      "subfieldPath": []
    },
    {
      "field": "richTextDescription",
      "header": "Description",
      "subfieldPath": []
    },
    {
      "field": "price",
      "header": "Price (Value)",
      "subfieldPath": [
        {
          "name": "value"
        }
      ]
    },
    {
      "field": "gtin",
      "header": "GTIN",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "sku",
      "header": "Offer ID",
      "subfieldPath": []
    },
    {
      "field": "color",
      "header": "Color ",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "price",
      "header": "Price (Currency)",
      "subfieldPath": [
        {
          "name": "currencyCode"
        }
      ]
    }
  ]
}
